<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"

        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_adapter"
            android:elevation="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cvImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/unnamed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.18"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/tvName"
                style="@style/textTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.077" />


            <TextView
                android:id="@+id/tvRname"
                style="@style/textTheme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagar Mishra"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.616"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.077" />

            <TextView
                android:id="@+id/tvAge"
                style="@style/textTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.436" />

            <TextView
                android:id="@+id/tvRage"
                style="@style/textTheme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagar Mishra"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.616"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.436" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/textTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.776" />

            <TextView
                android:id="@+id/tvRaddress"
                style="@style/textTheme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagar Mishra"
                app:layout_constraintBottom_toBottomOf="@+id/cvImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.616"
                app:layout_constraintStart_toEndOf="@+id/cvImage"
                app:layout_constraintTop_toTopOf="@+id/cvImage"
                app:layout_constraintVertical_bias="0.776" />

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit"
                android:tintMode="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintHorizontal_bias="0.604"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRaddress"
                app:layout_constraintVertical_bias="0.45"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete"
                android:tintMode="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintHorizontal_bias="0.791"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRaddress"
                app:layout_constraintVertical_bias="0.45"
                app:layout_constraintWidth_percent="0.1" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>